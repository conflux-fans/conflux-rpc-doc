  "components": {
    "schemas": {
      "Status": {
        "title": "PoS chain status",
        "type": "object",
        "required": [
          "latestCommitted",
          "epoch",
          "pivotDecision"
        ],
        "properties": {
          "epoch": {
            "title": "PoS latest epoch",
            "$ref": "#/components/schemas/uint"
          },
          "latestCommitted": {
            "title": "PoS latest committed block number",
            "$ref": "#/components/schemas/uint"
          },
          "latestVoted": {
            "title": "PoS latest voted block number",
            "$ref": "#/components/schemas/uint"
          },
          "pivotDecision": {
            "title": "PoS latest decison for PoW chain",
            "$ref": "#/components/schemas/uint"
          }
        }
      },
      "EpochReward": {
        "title": "Epoch reward",
        "required": [
          "powEpochHash",
          "accountRewards"
        ],
        "properties": {
          "powEpochHash": {
            "title": "PoW pivot chain's epoch hash",
            "$ref": "#/components/schemas/hash32"
          },
          "accountRewards": {
            "title": "Account rewards",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/EpochAccountReward"
            }
          }
        }
      },
      "EpochAccountReward": {
        "title": "",
        "required": [
          "posAddress",
          "powAddress",
          "reward"
        ],
        "properties": {
          "posAddress": {
            "title": "",
            "$ref": "#/components/schemas/hash32"
          },
          "powAddress": {
            "title": "",
            "type": "string"
          },
          "reward": {
            "title": "",
            "$ref": "#/components/schemas/uint"
          }
        }
      },
      "CommitteeState": {
        "title": "PoS committee",
        "required": [
          "currentCommittee",
          "elections"
        ],
        "properties": {
          "currentCommittee": {
            "title": "Current Committee",
            "$ref": "#/components/schemas/Committee"
          },
          "elections": {
            "title": "Nodes open for election",
            "type": "array",
            "$ref": "#/components/schemas/RpcTermData"
          }
        }
      },
      "Committee": {
        "title": "committees",
        "required": [
          "epochNumber",
          "totalVotingPower",
          "quorumVotingPower",
          "nodes"
        ],
        "properties": {
          "epochNumber": {
            "title": "Epoch number",
            "$ref": "#/components/schemas/uint"
          },
          "totalVotingPower": {
            "title": "Total voting power",
            "$ref": "#/components/schemas/uint"
          },
          "quorumVotingPower": {
            "title": "Quorum voting power",
            "$ref": "#/components/schemas/uint"
          },
          "nodes": {
            "title": "Committee nodes",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/NodeVotingPower"
            }
          }
        }
      },
      "RpcTermData": {
        "title": "Epoch election data",
        "type": "object",
        "required": [
          "startBlockNumber",
          "isFinalized",
          "topElectingNodes"
        ],
        "properties": {
          "startBlockNumber": {
            "title": "Be committee from the block number",
            "$ref": "#/components/schemas/uint"
          },
          "isFinalized": {
            "title": "Is finalize",
            "type": "boolean"
          },
          "topElectingNodes": {
            "title": "Top electing nodes",
            "type": "array",
            "$ref": "#/components/schemas/NodeVotingPower"
          }
        }
      },
      "NodeVotingPower": {
        "title": "Node address and voting power",
        "type": "object",
        "required": [
          "address",
          "votingPower"
        ],
        "properties": {
          "address": {
            "title": "Account address",
            "$ref": "#/components/schemas/hash32"
          },
          "votingPower": {
            "title": "Voting power",
            "$ref": "#/components/schemas/uint"
          }
        }
      },
      "Account": {
        "title": "PoS Account",
        "type": "object",
        "required": [
          "address",
          "blockNumber",
          "status"
        ],
        "properties": {
          "address": {
            "title": "address",
            "$ref": "#/components/schemas/hash32"
          },
          "blockNumber": {
            "title": "Block number",
            "$ref": "#/components/schemas/uint"
          },
          "status": {
            "title": "Node lock status",
            "$ref": "#/components/schemas/NodeLockStatus"
          }
        }
      },
      "PivotBlockDecision": {
        "title": "",
        "type": "object",
        "properties": {
          "height": {
            "title": "",
            "$ref": "#/components/schemas/uint"
          },
          "blockHash": {
            "title": "",
            "$ref": "#/components/schemas/hash32"
          }
        }
      },
      "Block": {
        "title": "PoS Block",
        "type": "object",
        "required": [
          "epoch",
          "round",
          "nextTxNumber",
          "height",
          "hash",
          "parentHash",
          "timestamp",
          "signatures"
        ],
        "properties": {
          "epoch": {
            "title": "Epoch number corresponds to the set of validators that are active for this block",
            "$ref": "#/components/schemas/uint"
          },
          "round": {
            "title": "Block round number",
            "$ref": "#/components/schemas/uint"
          },
          "nextTxNumber": {
            "title": "Number of next will generated transaction",
            "$ref": "#/components/schemas/uint"
          },
          "height": {
            "title": "height",
            "$ref": "#/components/schemas/uint"
          },
          "hash": {
            "title": "Block hash",
            "$ref": "#/components/schemas/hash32"
          },
          "parentHash": {
            "title": "Block parent hash",
            "$ref": "#/components/schemas/hash32"
          },
          "timestamp": {
            "title": "Block timestamp",
            "$ref": "#/components/schemas/uint"
          },
          "miner": {
            "title": "Miner address",
            "$ref": "#/components/schemas/hash32"
          },
          "pivotDecision": {
            "title": "Pivot decision",
            "$ref": "#/components/schemas/uint"
          },
          "signatures": {
            "title": "",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Signature"
            }
          }
        }
      },
      "Transaction": {
        "title": "PoS transaction",
        "type": "object",
        "required": [
          "from",
          "hash",
          "blockHash",
          "number"
        ],
        "properties": {
          "from": {
            "title": "Transaction sender",
            "$ref": "#/components/schemas/hash32"
          },
          "hash": {
            "title": "Transaction hash",
            "$ref": "#/components/schemas/hash32"
          },
          "blockHash": {
            "title": "Hash of block that transaction belong's to",
            "$ref": "#/components/schemas/hash32"
          },
          "blockNumber": {
            "title": "Number of block that transaction belong's to",
            "$ref": "#/components/schemas/uint"
          },
          "timestamp": {
            "title": "Transaction's timestamp",
            "$ref": "#/components/schemas/uint"
          },
          "number": {
            "title": "Transaction number",
            "$ref": "#/components/schemas/uint"
          },
          "status": {
            "title": "Transaction status",
            "type": "string",
            "description": "Enum with optional value: Executed, Failed, Discard"
          },
          "type": {
            "title": "Transaction type",
            "type": "string",
            "description": "Enum with optional value: BlockMeta, Election, Retire, Register, UpdateVotinPower, PivoteDecision, Dispute, Other"
          },
          "payload": {
            "title": "Transaction payload",
            "oneOf": [
              {
                "$ref": "#/components/schemas/ElectionPayload"
              },
              {
                "$ref": "#/components/schemas/RetirePayload"
              },
              {
                "$ref": "#/components/schemas/UpdateVotingPowerPayload"
              },
              {
                "$ref": "#/components/schemas/DisputePayload"
              },
              {
                "$ref": "#/components/schemas/RegisterPayload"
              },
              {
                "$ref": "#/components/schemas/PivotBlockDecisionPayload"
              }
            ]
          }
        }
      },
      "Signature": {
        "title": "Block signature",
        "type": "object",
        "properties": {
          "account": {
            "title": "Node account address",
            "$ref": "#/components/schemas/hash32"
          },
          "votes": {
            "title": "Node vote number",
            "$ref": "#/components/schemas/uint"
          }
        }
      },
      "NodeLockStatus": {
        "title": "Node lock status",
        "type": "object",
        "required": [
          "inQueue",
          "outQueue",
          "locked",
          "unlocked",
          "availableVotes",
          "forfeited"
        ],
        "properties": {
          "inQueue": {
            "title": "In queue votes",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/VotePowerState"
            }
          },
          "locked": {
            "title": "Locked votes",
            "$ref": "#/components/schemas/uint"
          },
          "outQueue": {
            "title": "Out queue votes",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/VotePowerState"
            }
          },
          "unlocked": {
            "title": "Unlocked votes",
            "$ref": "#/components/schemas/uint"
          },
          "availableVotes": {
            "title": "Available votes",
            "$ref": "#/components/schemas/uint"
          },
          "forceRetired": {
            "title": "Force retired",
            "type": "#/components/schemas/uint"
          },
          "forfeited": {
            "title": "Exempt from forfeit",
            "$ref": "#/components/schemas/uint"
          }
        }
      },
      "VotePowerState": {
        "title": "Vote power state",
        "type": "object",
        "required": [
          "endBlockNumber",
          "power"
        ],
        "properties": {
          "endBlockNumber": {
            "title": "",
            "$ref": "#/components/schemas/uint"
          },
          "power": {
            "title": "",
            "$ref": "#/components/schemas/uint"
          }
        }
      },
      "ElectionPayload": {
        "title": "ElectionPayload",
        "type": "object",
        "properties": {
          "publicKey": {
            "title": "",
            "type": "string"
          },
          "targetTerm": {
            "title": "",
            "$ref": "#/components/schemas/uint"
          },
          "vrfProof": {
            "title": "",
            "type": "string"
          },
          "vrfPublicKey": {
            "title": "",
            "$ref": "#/components/schemas/hash32"
          }
        }
      },
      "RetirePayload": {
        "title": "RetirePayload",
        "type": "object",
        "properties": {
          "nodeId": {
            "title": "",
            "$ref": "#/components/schemas/hash32"
          },
          "votes": {
            "title": "",
            "$ref": "#/components/schemas/uint"
          }
        }
      },
      "UpdateVotingPowerPayload": {
        "title": "UpdateVotingPowerPayload",
        "type": "object",
        "properties": {
          "nodeAddress": {
            "title": "",
            "$ref": "#/components/schemas/hash32"
          },
          "votingPower": {
            "title": "",
            "$ref": "#/components/schemas/uint"
          }
        }
      },
      "DisputePayload": {
        "title": "DisputePayload",
        "type": "object",
        "properties": {
          "address": {
            "title": "",
            "$ref": "#/components/schemas/hash32"
          },
          "blsPubKey": {
            "title": "",
            "type": "string"
          },
          "vrfPubKey": {
            "title": "",
            "type": "string"
          },
          "conflictingVotes": {
            "title": "",
            "$ref": "#/components/schemas/uint"
          }
        }
      },
      "RegisterPayload": {
        "title": "RegisterPayload",
        "type": "object",
        "properties": {
          "publicKey": {
            "title": "",
            "type": "string"
          },
          "vrfPublicKey": {
            "title": "",
            "type": "string"
          }
        }
      },
      "PivotBlockDecisionPayload": {
        "title": "PivotBlockDecisionPayload",
        "type": "object",
        "properties": {
          "blockHash": {
            "title": "",
            "$ref": "#/components/schemas/hash32"
          },
          "height": {
            "title": "",
